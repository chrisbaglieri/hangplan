<h2>Resend Confirmation Instructions</h2>
<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.inputs do %>
    <%= f.email_field :email, :required => true, :placeholder => 'me@example.com' %>
  <% end %>
	<%= f.actions do %>
    <%= f.submit "Resend" %>
  <% end %>
<% end %>
<%= render :partial => "devise/shared/links" %>