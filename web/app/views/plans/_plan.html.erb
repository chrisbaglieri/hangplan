<div class="plan span-18">
	<ul class="span-18">
		<li class="divider span-6"><% if plan.time? %><%= format_date(plan.time) %><% else %>Sooner or later<% end %></li>
		<li class="divider span-5">WHERE</li>
		<li class="divider span-3">WHEN</li>
		<li class="divider span-2">&nbsp;</li>
		<li class="divider span-1 last">&nbsp;</li>
		<li class="section span-6"><%= image_tag plan.owner.gravatar_url(:size => 24) %><%= plan.name %></li>
		<li class="section span-5"><% if plan.location? %><%= plan.location %><% else %>Somewhere I guess<% end %></li>
		<li class="section span-3"><% if plan.time? %><%= format_time(plan.time) %><% else %>Sometime I suppose<% end %></li>
		<li class="section span-2">	  
		  <%= link_to "IN", plan_participants_path(plan), :method => :post, :class => 'action-button' %>
		</li>
		<li class="section span-1 last"><%= link_to image_tag("arrow-right.png"), plan %></li>
	</ul>
</div>