<div id="notifications" class="row">
	<div id="plan-requests" class="span14">
		<h2>Plan Requests</h2>
		<h3>Pending Requests</h3>
		<h3>Your Requests</h3>
	</div>
	<div class="span14"><hr /></div>
	<div id="friend-requests" class="span14">
		<h2>Friend Requests</h2>
		<h3>Pending Requests</h3>
		  <% current_user.pending_invited_by.each do |u| %>
		    <p>
		      <%= link_to u.name, u %>
		      <%= link_to t('helpers.submit.friendship.approve'), 
		        approve_friends_path(:friendship => { :user_id => u.id, :friend_id => current_user.id }), 
		        :method => :put, :class => ['btn', 'supersmall', 'primary'] %>
		    </p>
		  <% end %>
		<h3>Your Requests</h3>
      <% current_user.pending_invited.each do |u| %>
        <p><%= link_to u.name, u %></p>
      <% end %>
	</div>	
</div>