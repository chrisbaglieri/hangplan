<h2>Sign up</h2>
<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= f.inputs do %>
		<%= f.text_field :name, :required => true %>
		<%= f.email_field :email, :required => true, :placeholder => 'me@example.com' %>
  	<%= f.password_field :password, :required => true %>
		<%= f.password_field :password_confirmation, 'Confirmation', :required => true %>
	<% end %>
	<%= f.actions do %>
  	<%= f.submit "Sign up" %>
	<% end %>
<% end %>
<%= render :partial => "devise/shared/links" %>