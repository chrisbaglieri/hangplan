<h1>Sign in</h1>
<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= f.inputs do %>
		<%= f.email_field :email, :required => true, :placeholder => 'me@example.com' %>
  	<%= f.password_field :password, :required => true %>
		<%= f.toggles 'Remember Me' do %>
  		<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		<% end %>
	<% end %>
	<%= f.actions do %>
  	<%= f.submit "Sign in" %>
	<% end %>
<% end %>
<%= render :partial => "devise/shared/links" %>