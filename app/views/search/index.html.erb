<% if @query %>
  <p>
    Showing results for "<%= @query %>".
  </p>
<% end %>
  
<% unless @users.blank? %>
  <h3>Users</h3>
  <% @users.each do |u| %>
    <p>
      <%= u.name %>
      (<%= u.email %>)
      <%= link_to 'Subscribe', "#{subscriptions_path}?id=#{u.id}", :method => :post %>
    </p>
  <% end %>
<% end %>

<% unless @plans.blank? %>
  <h3>Plans</h3>
  <%= render :partial => @plans %>
<% end %>

<% if @users.blank? && @plans.blank? %>
  <p>Nothing found.</p>
<% end %>
